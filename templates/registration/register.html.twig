{% extends 'base.html.twig' %}

{% block title %}Créez un compte{% endblock %}

{% block body %}
<header>{{ include('navBis.html.twig') }}</header>
<div class=" flex-col justify-items-center">
<h1 class="mt-10 text-white text-xl font-bold mb-6">Créez un compte</h1>

{{ form_start(form) }}

  <div class="mb-5 ">
    {{ form_label(form.email, 'Votre e-mail', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-white'}}) }}
    {{ form_widget(form.email, {
      'attr': {
        'class': ' w-[300px] bg-white text-black border border-gray-300 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block  p-2.5'
      }
    }) }}
  </div>

  <div class="mb-5">
    {{ form_label(form.plainPassword.first, 'Mot de passe', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-white'}}) }}
    {{ form_widget(form.plainPassword.first, {
      'attr': {
        'class': 'w-[300px] bg-white text-black border border-gray-300 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5'
      }
    }) }}
  </div>

  <div class="mb-5">
    {{ form_label(form.plainPassword.second, 'Confirmation du mot de passe', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-white'}}) }}
    {{ form_widget(form.plainPassword.second, {
      'attr': {
        'class': 'w-[300px] bg-white text-black border border-gray-300 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5'
      }
    }) }}
  </div>
<div class="flex justify-center">
  <button type="submit" class="my-4 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
    Créer un compte
  </button>
</div>
{{ form_end(form) }}
</div>
{% endblock %}
